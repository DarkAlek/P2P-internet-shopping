<!DOCTYPE html>
<html class="no-js">
<head>
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="icon" type="image/png" href="images/favicon.png">
    <title>Kupuj.pl - @ViewBag.Title </title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Template CSS Files
    ================================================== -->
    <!-- Twitter Bootstrs CSS -->
    @Styles.Render("~/Content/css/bootstrap.min.css")
    <!-- Ionicons Fonts Css -->
    @Styles.Render("~/Content/css/ionicons.min.css")
    <!-- animate css -->
    @Styles.Render("~/Content/css/animate.css")
    <!-- Hero area slider css-->
    @Styles.Render("~/Content/css/slider.css")
    <!-- owl craousel css -->
    @Styles.Render("~/Content/css/owl.carousel.css")
    @Styles.Render("~/Content/css/owl.theme.css")
    @Styles.Render("~/Content/css/jquery.fancybox.css")
    <!-- template main css file -->
    @Styles.Render("~/Content/css/main.css")
    @Styles.Render("~/Content/css/custom.css")
    <!-- responsive css -->
    @Styles.Render("~/Content/css/responsive.css")

    <!-- Template Javascript Files
    ================================================== -->
    <!-- modernizr js -->
    @Scripts.Render("~/Scripts/modernizr-2.6.2.min.js")
    <!-- jquery -->
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    <!-- owl carouserl js -->
    @Scripts.Render("~/Scripts/owl.carousel.min.js")
    <!-- bootstrap js -->
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    <!-- wow js -->
    @Scripts.Render("~/Scripts/wow.min.js")
    <!-- slider js -->
    @Scripts.Render("~/Scripts/slider.js")
    @Scripts.Render("~/Scripts/jquery.fancybox.js")
    <!-- template main js -->
    @Scripts.Render("~/Scripts/main.js")
</head>
<body>
    <!--
    ==================================================
    Header Section Start
    ================================================== -->
    <header id="top-bar" class="navbar-fixed-top animated-header">
        <div class="container">
            <div class="navbar-header">
                <!-- responsive nav button -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- /responsive nav button -->
                <!-- logo -->
                <div class="navbar-brand" style="color:#02bdd5">
                    <a href="/" style="color:#02bdd5;font-size:30px;">
                        <b>Kupuj.pl</b>
                    </a>
                </div>
                <!-- /logo -->
            </div>
            <!-- main menu -->
            <nav class="collapse navbar-collapse navbar-right" role="navigation">
                <div class="main-menu">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>
                            @Html.ActionLink("Usługi", "Index", "Services")
                        </li>
                        <!--
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Pages <span class="caret"></span></a>
                                            <div class="dropdown-menu">
                                                <ul>
                                                    <li><a href="404.html">404 Page</a></li>
                                                    <li><a href="gallery.html">Gallery</a></li>
                                                </ul>
                                            </div>
                                        </li>
                        -->
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </nav>
            <!-- /main nav -->
        </div>
    </header>
    @RenderBody()
    <!--
    ==================================================
    Footer Section Start
    ================================================== -->
    <footer id="footer">
        <div class="container">
            <div class="col-md-8">
                <p class="copyright">Copyright: <span>2017</span>. Using theme by <a href="http://www.Themefisher.com">Themefisher</a> Developed by Aleksy Miśtal and Krzysztof Pranczk</p>
            </div>
            <div class="col-md-4">
                <!-- Social Media -->
                <ul class="social">
                    <li>
                        <a href="#" class="Facebook">
                            <i class="ion-social-facebook"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="Twitter">
                            <i class="ion-social-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="Linkedin">
                            <i class="ion-social-linkedin"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="Google Plus">
                            <i class="ion-social-googleplus"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer> <!-- /#footer -->
    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("scripts")
    }
</body>
</html>